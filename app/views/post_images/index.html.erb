<div class="profile-container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
      <table class="table">
        <tbody>
          <tr></tr>
          <tr>
          <th>name</th>
          <th><h3 class="profile-name"><%= @user.name %></h3></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th></th>
          </tr>
        </tbody>
      </table>
      
      <div class="row">
        <% if @user.id == current_user.id %>
          <p><%= link_to "", edit_user_path(@user), class: "btn btn-outline-socondary btn-block fas fa-user-cog edit_user_27083" %></p>
        <% end %>
      </div>
      <h2 class="mt-3">New book</h2>
      <%= form_with model:@user, local:true do |f| %>
        <label for="book_title">Title</label>
        <%= f.text_field :title, autofocus: true, id:"inputTitle" %>
        <label for="book_opinion">Opinion</label>
        <%= f.text_area :opinion, autofocus: true, id:"inputOpinion" %>
        
        <%= f.submit "Create Book" %>
      <% end %>
    </div>
  </div>
</div>