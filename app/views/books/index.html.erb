<div class="profile-container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <table class="table">
        <tbody>
          <tr></tr>
          <tr>
          <th>name</th>
          <th><h3 class="profile-name"></h3></th>
          </tr>
          <% @books.each do |book| %>
          <tr>
            <td>
              <%= book.title %>
            </td>
            <td>
              <%= book.body %>
            </td>
            <td>
              <%= link_to "Show", book_path(book.id) %>
              <%= link_to "Edit", edit_book_path(book.id) %>
              <%= link_to "Destroy", book_path(book.id), method: :delete, data: { confirm: 'Are you sure?' } %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>

      <h1>New book</h1>
      <%= form_for @book do |f| %>
      <% if @book.errors.any? %>
      <h3><%= @book.errors.count %>error prohibited this book from being saved:</h3>
      <ul>
        <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
        </ul>
      <% end %>
    <% end %>
    <%= form_with model:@book, local:true do |f| %>
    <h4>Title</h4>
    <%= f.text_field :title %>

    <h4>Body</h4>
    <%= f.text_area :body %>

    <br><%= f.submit 'Create Book' %></br>

    <% end %>
    </div>
  </div>
</div>